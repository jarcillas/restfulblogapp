<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui large header">
    <i class="circular book icon"></i>
    Edit Blog
  </div>
  <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>" />
    </div>
    <div class="field">
      <label>Image URL</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>" />
    </div>
    <div class="field">
      <label>Body</label>
      <textarea name="blog[body]" cols="30" rows="6" ><%= blog.body %></textarea>
    </div>
    <input class="ui blue button" type="submit" value="Submit" />
  </form>
</div>

<% include partials/footer %>