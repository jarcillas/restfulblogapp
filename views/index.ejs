<% include partials/header %>
<div class="ui main container cards">
  <% blogs.forEach(function (blog) { %>
  <div class="card">
    <div class="content">
      <div class="ui header"><%= blog.title %></div>
    </div>
    <div class="ui slide down masked reveal image">
      <img class="visible content" src="<%= blog.image %>" />
      <div class="description hidden content">
        <%= blog.body.substring(0,100) %>...
      </div>
    </div>

    <a class="ui bottom attached button" href="/blogs/<%= blog._id %>">Read more</a>
  </div>
  <% }); %>
</div>

<h1><%= %></h1>

<% include partials/footer %>
